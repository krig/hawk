<div class="panel panel-default">
  <div class="panel-body" data-help-target="#rightbar > .container-fluid > #helpentries > .attrhelp">
    <%= form_for [cib, alert], horizontal: true, bootstrap: true do |main_form| %>
      <%= errors_for alert %>
      <% if alert.new_record? %>
        <%= main_form.text_field :id, label: _("Alert ID") %>
      <% else %>
        <%= main_form.text_field :id, label: _("Alert ID"), readonly: true %>
      <% end %>
      <%= main_form.text_field :path, label: _("Path") %>

      <fieldset data-recipients="<%= alert.recipients.to_json %>" data-recipients-prefix="alert[recipients]" data-recipients-target=".content">
        <legend>
          <%= _("Recipients") %>
          <span class="pull-right toggleable">
            <%= icon_tag("chevron-up") %>
          </span>
        </legend>
        <div class="content"></div>
      </fieldset>

      <fieldset data-attrlist="<%= alert.params.to_json %>" data-attrlist-mapping="<%= alert.mapping[:params].to_json %>" data-attrlist-prefix="alert[params]" data-attrlist-target=".content" data-attrlist-freeform="yes">
        <legend>
          <%= _("Instance Attributes") %>
          <span class="pull-right toggleable">
            <%= icon_tag("chevron-up") %>
          </span>
        </legend>
        <div class="content"></div>
      </fieldset>

      <fieldset data-attrlist="<%= alert.meta.to_json %>" data-attrlist-mapping="<%= alert.mapping[:meta].to_json %>" data-attrlist-prefix="alert[meta]" data-attrlist-target=".content">
        <legend>
          <%= _("Meta Attributes") %>
          <span class="pull-right toggleable">
            <%= icon_tag("chevron-up") %>
          </span>
        </legend>
        <div class="content"></div>
      </fieldset>

      <%= main_form.button_group do %>
        <% if alert.new_record? %>
          <%= create_button(main_form, alert) %>
        <% else %>
          <%= apply_button(main_form, alert) %>
          <%= revert_button(main_form, alert) %>
        <% end %>
        <%= link_to _("Back"), edit_cib_config_path(cib_id: cib.id, anchor: "alerts"), class: "btn btn-default back" %>
      <% end %>
    <% end %>
  </div>
</div>
