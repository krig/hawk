.container-fluid
  .row
    %h1
      = icon_text "group", _("Edit Group"), class: "page"
      .pull-right
        .btn-group{ role: "group" }
          = link_to icon_text("trash", _("Delete")), cib_group_path(cib_id: @cib.id, id: @group.id), method: "delete", confirm: _("Are you sure you wish to delete %s?") % @group.id, class: "btn btn-default"

  .row
    = render partial: "form", locals: { cib: @cib, group: @group }

- content_for :rightbar do
  .container-fluid{ data: { spy: "affix" } }
    - @group.mapping.each do |key, values|
      - next unless values[:longdesc]

      .row{ class: key }
        %h2.margin-bottom
          = key

        = simple_format values[:longdesc]
