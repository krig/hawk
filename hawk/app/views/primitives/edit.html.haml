.container-fluid
  .row
    %h1
      = icon_text "file-o", _("Edit Primitive"), class: "page"
      .pull-right
        .btn-group{ role: "group" }
          = link_to icon_text("trash", _("Delete")), cib_primitive_path(cib_id: @cib.id, id: @primitive.id), method: "delete", confirm: _("Are you sure you wish to delete %s?") % @primitive.id, class: "btn btn-default"

  .row
    = render partial: "form", locals: { cib: @cib, primitive: @primitive }

- content_for :rightbar do
  .container-fluid{ data: { spy: "affix" } }
    /- @primitive.mapping.each do |key, values|
    /  - next unless values[:longdesc]

    /  .row{ class: key }
    /    %h2.margin-bottom
    /      = key

    /    = simple_format values[:longdesc]
