%h1
  = icon_text 'cogs', _('Preferences'), class: 'page'

.panel.panel-default
  .panel-body
    = form_for [@cib, @setting], horizontal: true, method: :put do |main_form|
      = main_form.select :language, :language_options, { include_hidden: false }, {  }

      = main_form.button_group do
        = setting_apply_button(main_form, @setting)
        = setting_revert_button(main_form, @setting)
