<div class="panel panel-default">
  <div class="panel-body" data-help-target="#rightbar > .container-fluid > #helpentries > .attrhelp">
    <%= form_for [cib, user], horizontal: true, bootstrap: true do |main_form| %>
      <%= errors_for user %>
      <% if user.new_record? %>
        <%= main_form.text_field :id, label: _("Target ID") %>
      <% else %>
        <%= main_form.text_field :id, label: _("Target ID"), readonly: true %>
      <% end %>
      <%= main_form.select :roles, :role_options, { include_hidden: false }, { multiple: true, size: 5 } %>
      <%= main_form.button_group do %>
        <% if user.new_record? %>
          <%= user_create_button(main_form, user) %>
        <% else %>
          <%= user_apply_button(main_form, user) %>
          <%= user_revert_button(main_form, user) %>
        <% end %>
        <%= link_to _("Back"), edit_cib_config_path(cib_id: cib.id, anchor: "users"), class: "btn btn-default back" %>
      <% end %>
    <% end %>
  </div>
</div>
